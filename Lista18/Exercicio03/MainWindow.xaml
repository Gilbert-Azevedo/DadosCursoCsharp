        <TextBox x:Name ="txtdados" HorizontalAlignment="Left" Height="23" Margin="10,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="470"/>
        <Button Content="Idade" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Width="75" Click="Idade_Click"/>
        <Button Content="ToString" HorizontalAlignment="Left" Margin="95,115,0,0" VerticalAlignment="Top" Width="75" Click="Dados_Click"/>

    </Grid>
</Window>
